Private Sub Worksheet_Change(ByVal Target As Range)
    Dim xNewValue As String
    Dim xOldValue As String
    Dim xDelim As String
    
    ' Set the delimiter (comma, semicolon, or new line)
    xDelim = ", "
    
    ' Specify the column or range where the drop-down is applied
    If Not Intersect(Target, Me.Range("B2:B10")) Is Nothing Then
        Application.EnableEvents = False
        
        xNewValue = Target.Value
        xOldValue = Target.OldValue
        
        ' Check if previous value exists and append new selection
        If xOldValue <> "" And xNewValue <> "" Then
            Target.Value = xOldValue & xDelim & xNewValue
        End If
        
        Application.EnableEvents = True
    End If
End Sub
