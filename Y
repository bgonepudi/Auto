WITH WeeklyCounts AS (
    SELECT 
        ck, 
        COUNT(*) AS TotalCount,
        SUM(CASE WHEN DATEPART(WEEK, GETDATE()) = DATEPART(WEEK, YourDateField) AND DATEPART(YEAR, GETDATE()) = DATEPART(YEAR, YourDateField) THEN 1 ELSE 0 END) AS CurrentWeekCount,
        SUM(CASE WHEN DATEPART(WEEK, GETDATE()) - 1 = DATEPART(WEEK, YourDateField) AND DATEPART(YEAR, GETDATE()) = DATEPART(YEAR, YourDateField) THEN 1 ELSE 0 END) AS PreviousWeekCount
    FROM 
        table
    WHERE 
        CK IN (11,77) 
    GROUP BY 
        CK
)
SELECT 
    CK,
    CurrentWeekCount,
    PreviousWeekCount
FROM 
    WeeklyCounts
ORDER BY 
    CK;
