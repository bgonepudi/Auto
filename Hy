# Load the raw content of the JSON file
$jsonFilePath = "path_to_your_json_file.json"
$jsonRawContent = Get-Content -Raw -Path $jsonFilePath

# Convert the raw JSON content to a PowerShell object
$jsonObject = $jsonRawContent | ConvertFrom-Json

# Convert the JSON object back to a JSON string without formatting (no line breaks or indentation)
$compactJson = $jsonObject | ConvertTo-Json -Compress

# Save the compact JSON string to a new file
$formattedJsonFilePath = "path_to_save_compact_json.json"
Set-Content -Path $formattedJsonFilePath -Value $compactJson
