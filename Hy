# Import the ImportExcel module
Import-Module ImportExcel

# Specify the path to the Excel file and the sheet name
$excelPath = "C:\path\to\your\example.xlsx"
$sheetName = "Sheet1"

# Import the Excel sheet into a PowerShell object
$excelData = Import-Excel -Path $excelPath -WorksheetName $sheetName

# Convert the PowerShell object to JSON format
$jsonOutput = $excelData | ConvertTo-Json -Depth 10

# Specify the output path for the JSON file
$jsonPath = "C:\path\to\your\output.json"

# Save the JSON output to a file
$jsonOutput | Out-File -FilePath $jsonPath -Encoding utf8

Write-Host "Excel file has been converted to JSON successfully."
