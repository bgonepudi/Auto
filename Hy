# Define the input CSV file and the output XML file
$csvFile = "C:\path\to\your\file.csv"
$xmlFile = "C:\path\to\your\output.xml"

# Read the CSV file into a variable
$csvData = Import-Csv -Path $csvFile

# Create a new XML document
$xmlDoc = New-Object System.Xml.XmlDocument
$root = $xmlDoc.CreateElement("Root")
$xmlDoc.AppendChild($root)

# Loop through each row in the CSV data
foreach ($row in $csvData) {
    $item = $xmlDoc.CreateElement("Item")
    foreach ($column in $row.PSObject.Properties) {
        if ($column.Name -ne "Column1") {
            $element = $xmlDoc.CreateElement($column.Name)
            $element.InnerText = $column.Value
            $item.AppendChild($element)
        }
    }
    $root.AppendChild($item)
}

# Save the XML document to a file
$xmlDoc.Save($xmlFile)

Write-Host "XML file has been created at $xmlFile"
