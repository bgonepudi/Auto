# Define the input CSV file and the output JSON file
$csvFile = "C:\path\to\your\file.csv"
$jsonFile = "C:\path\to\your\output.json"

# Read the CSV file into a variable
$csvData = Import-Csv -Path $csvFile

# Remove 'Column1' from the data
$filteredData = $csvData | Select-Object -Property * -ExcludeProperty Column1

# Convert the filtered data to JSON
$jsonData = $filteredData | ConvertTo-Json -Depth 3

# Save the JSON data to a file
Set-Content -Path $jsonFile -Value $jsonData

Write-Host "JSON file has been created at $jsonFile"
