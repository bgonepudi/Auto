$Body = @"
<html>
<body>
    <p>Test Summary:</p>
    <ul>
        <li>Total Segments Compared: $totalSegments</li>
        <li>Segments Passed: $passedSegments</li>
        <li>Segments Failed: $failedSegments</li>
        <li>Overall Status: $overallStatus</li>
    </ul>
</body>
</html>
"@

Send-MailMessage -SmtpServer $smtpServer -Port $smtpPort -To $toEmail `
    -From $fromEmail -Subject $emailSubject -Body $Body -BodyAsHtml `
    -Attachments $logFilePath
