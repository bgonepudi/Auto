@echo off
:: Check if the script is running as administrator
net session >nul 2>&1
if %errorLevel% == 0 (
    echo Already running as administrator.
    PowerShell -NoExit -Command "Start-Process PowerShell -Verb runAs"
) else (
    echo Not running as administrator, elevating now...
    :: Elevate the script to run as administrator
    PowerShell -NoExit -Command "Start-Process PowerShell -Verb runAs"
)
exit
